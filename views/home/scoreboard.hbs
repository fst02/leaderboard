<h1>{{title}}</h1>
<form>
  <select name="game" onchange="this.form.submit()">
    <option value="All">All</option>
    <option value="Hangman" {{selectedIfEqual game 'Hangman'}}>Hangman</option>
    <option value="Tetris" {{selectedIfEqual game 'Tetris'}}>Tetris</option>
    <option value="Mario" {{selectedIfEqual game 'Mario'}}>Mario</option>
  </select>
</form>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">
        Nickname
        <a href="?orderByColumn=name&order=desc&game={{game}}">↓</a>
        <a href="?orderByColumn=name&order=asc&game={{game}}">↑</a>
      </th>
      <th scope="col">
        Game
        <a href="?orderByColumn=game&order=desc&game={{game}}">↓</a>
        <a href="?orderByColumn=game&order=asc&game={{game}}">↑</a>
      </th>
      <th scope="col">
        Top score
        <a href="?orderByColumn=topScore&order=desc&game={{game}}">↓</a>
        <a href="?orderByColumn=topScore&order=asc&game={{game}}">↑</a>
      </th>
      <th scope="col">
        Number of rounds
        <a href="?orderByColumn=numberOfRounds&order=desc&game={{game}}">↓</a>
        <a href="?orderByColumn=numberOfRounds&order=asc&game={{game}}">↑</a>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each scoreboard}}
    <tr>
      <th scope="row">{{ increment @index }}</th>
      <td>{{this.name}}</td>
      <td>{{this.game}}</td>
      <td>{{this.topScore}}</td>
      <td>{{this.numberOfRounds}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<nav aria-label="Scoreboard navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="?offset={{previousOffset}}">Previous</a></li>    
    <li class="page-item"><a class="page-link" href="?offset={{nextOffset}}">Next</a></li>
  </ul>
</nav>
<img src="avatar.jpg">