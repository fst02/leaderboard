<div class="container">
    <h1>{{title}}</h1>
    <form>
        <select name="game" onchange="this.form.submit()">            
            <option value="All">All</option>             
            <option value="Hangman">Hangman</option>
            <option value="Tetris">Tetris</option>
            <option value="Mario">Mario</option>           
        </select>
    </form>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">
                    Nickname
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=name&order=desc">↓</a>
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=name&order=asc">↑</a>
                </th>
                <th scope="col">
                    Game
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=game&order=desc">↓</a>
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=game&order=asc">↑</a>
                </th>
                <th scope="col">
                    Top score
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=topScore&order=desc">↓</a>
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=topScore&order=asc">↑</a>
                </th>
                <th scope="col">
                    Number of rounds
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=numberOfRounds&order=desc">↓</a>
                    <a href="http://fullstack.braininghub.com:3000?orderByColumn=numberOfRounds&order=asc">↑</a>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each scoreboard}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.game}}</td>
                <td>{{this.topScore}}</td>
                <td>{{this.numberOfRounds}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <form id="signUp" method="POST">
        <label for="nickname">Nickname</label>
        <input type="text" name="nickname" id="nickname" placeholder="Enter name" required><br>
        <label for="email">email</label>
        <input type="email" name="email" id="email" placeholder="Enter email" required><br>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" placeholder="Enter password" required><br>
        <label for="passwordRepeat">re-Password</label>
        <input type="password" name="passwordRepeat" id="passwordRepeat" placeholder="Repeat password" required><br>
    </form>
    <label for="imageUpload">Upload image (optional)</label>
    <input form="signUp" type="file" id="imageUpload" placeholder="Avatar"><br>
    <label for="introduction">Introduction (optional) </label><br>
    <textarea form="signUp" name="introduction" id="introduction" rows="5" cols="50">
    </textarea><br>
    <input form="signUp" type="submit" value="Submit">
</div>