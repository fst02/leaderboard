<h1>Edit profile</h1>
{{> error validationError=validationError }}
<form id="editProfile" method="POST" action="profile/update" enctype="multipart/form-data">
  <div class="form-group">
    <label for="currentPassword">Current password</label>
    <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Enter password"
      required>
  </div>
  <div class="form-group">
    <label for="newPassword">New password</label>
    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter password">
  </div>
  <div class="form-group">
    <label for="passwordRepeat">Repeat password</label>
    <input type="password" class="form-control" id="passwordRepeat" name="passwordRepeat" placeholder="Repeat password">
  </div>
  <div class="form-group">
    {{#if user.avatar}}
      <img alt="User Pic" src="images/{{user.avatar}}" id="edit-image" class="img-responsive mb-3" width="240px">
      <button type="button" class="btn-sm btn-danger m-3" id="delete-image-button">Delete image</button><br>
    {{else}}
      <img alt="User Pic" src="avatar.jpg" id="edit-image" class="img-responsive" width="240px"><br>
    {{/if}}
    <label for="imageUpload">Upload image</label>
    <input class="form-control" form="editProfile" type="file" accept="image/*" id="imageUpload" name="imageUpload">
  </div>
  <div class="form-group">
    <label for="introduction">Introduction</label>
    <textarea id="introduction" name="introduction">
      {{#if introduction}}
        {{{introduction}}}
      {{else}}
        {{{user.introduction}}}
      {{/if}}
    </textarea>
    <p>Password required for any changes</p>
    <a href="profile/show" class="btn btn-secondary">Cancel</a>
    <button form="editProfile" type="submit" class="btn btn-dark">Save</button>
  </div>
</form>
