<div class="row">
  <div class="card card-default">
    <div class="card-title">
      <h4>My Profile
        <a href="profile/edit">
          <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
          </svg>
        </a>
      </h4>
    </div>
    <div class="card-body row">
      <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
        {{#if user.avatar}}
          <img alt="User Pic" src="images/{{user.avatar}}" id="profile-image" class="rounded-circle img-responsive"
          width="120px">
        {{else}}
          <img alt="User Pic" src="avatar.jpg" id="profile-image" class="rounded-circle img-responsive"
          width="120px">
        {{/if}}
      </div>
      <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
        <div class="container">
          <h2>{{user.nickname}}</h2>
        </div>
        <hr>
        <div class="container details">
          <div>
            <p><span class="fas fa-envelope" aria-hidden="true" style="width:50px;"></span>E-mail</p>
            <p>{{user.email}}</p>
          </div>
          <div>
            <p><span class="fas fa-info" aria-hidden="true" style="width:50px;"></span>Introduction</p>
            {{{user.introduction}}}
          </div>
        </div>
        <hr>
      </div>
    </div>
  </div>
</div>